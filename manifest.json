{
    "manifest_version":2,
    "name": "roman-numerals",
    "version": "1.0",
    "description": "Convert numbers in Arabic-Roman",
    "icons": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
    },
    "browser_action": {
        "default_icon": "icon16.png",
        "default_popup": "index.html"
    },
    "permissions":[
        "background",
        "storage",
        "clipboardWrite",
        "http://*/*",
        "https://*/*",
        "activeTab",
        "nativeMessaging"
    ],
    "content_security_policy": "script-src 'self' 'unsafe-eval' https://cdn.jsdelivr.net; object-src 'self'"    
}